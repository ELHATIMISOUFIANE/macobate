  // Fonction pour initialiser les boutons de d√©tails des offres
  document.addEventListener('DOMContentLoaded', function() {
    // S√©lectionner tous les boutons de d√©tails des offres
    const jobDetailButtons = document.querySelectorAll('.job-details-btn');
    
    // Ajouter un √©couteur d'√©v√©nement √† chaque bouton
    jobDetailButtons.forEach(button => {
      button.addEventListener('click', function() {
        // R√©cup√©rer l'ID de l'offre
        const jobId = this.getAttribute('data-job-id');
        // S√©lectionner la section de d√©tails correspondante
        const detailsSection = document.getElementById(`details-${jobId}`);
        
        // Si la section est cach√©e, on l'affiche
        if (detailsSection.style.display === 'none') {
          // On ferme d'abord toutes les sections ouvertes
          document.querySelectorAll('.job-details').forEach(section => {
            section.style.display = 'none';
          });
          
          // R√©initialiser le texte de tous les boutons
          document.querySelectorAll('.job-details-btn').forEach(btn => {
            btn.innerHTML = 'Voir d√©tails <span class="icon flaticon-arrow-pointing-to-right"></span>';
          });
          
          // Puis on ouvre celle qu'on veut voir
          detailsSection.style.display = 'block';
          
          // On change le texte du bouton
          this.innerHTML = 'Masquer les d√©tails <span class="icon flaticon-arrow-pointing-to-right"></span>';
          
          // On scroll jusqu'√† la section de d√©tails
          setTimeout(() => {
            detailsSection.scrollIntoView({ behavior: 'smooth', block: 'center' });
          }, 100);
        } else {
          // Si la section est visible, on la cache
          detailsSection.style.display = 'none';
          
          // On remet le texte original du bouton
          this.innerHTML = 'Voir d√©tails <span class="icon flaticon-arrow-pointing-to-right"></span>';
