---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import AppointmentForm from "../../components/AppointmentForm.astro";
import CallToActionSection from "../../components/CallToActionSection.astro";
import { PiEngineBold } from "react-icons/pi";
import { BsFillMotherboardFill, BsSpeedometer } from "react-icons/bs";
import { FaAnchor, FaShip, FaClock, FaHandHoldingWater, FaPrescriptionBottle, FaIndustry } from 'react-icons/fa';
import { GiPulleyHook, GiWaterTank, GiScubaTanks, GiValve } from "react-icons/gi";
---

<BaseLayout title="ROBEX - Industrial Valves & Hydromechanical Equipment | MACOBATE">
  <Header />
  <main>
    <!--Page Title-->
    <section
      class="page-title"
      style="background-image:url(/images/background/6.jpg); filter: brightness(1.5)"
    >
      <div class="auto-container">
        <ul class="page-breadcrumb">
          <li><a href="/">Home</a></li>
          <li><a href="/#our-brands">Our Brands</a></li>
          <li>ROBEX</li>
        </ul>
        <h1>ROBEX</h1>
      </div>
    </section>
    <!--End Page Title-->

    <!-- Brand Detail Section -->
    <section class="market-single-section brand-section">
      <div class="auto-container">
        <div class="row clearfix">
          <div class="content-column col-lg-8 col-md-12 col-sm-12">
            <div class="inner-column">
              <div class="brand-header">
                <div class="brand-logo">
                  <img
                    src="/images/gallery/robex-logo.png"
                    alt="ROBEX Logo"
                  />
                </div>
                <div class="brand-intro">
                  <h2>Sealing the Future of Water & Industry </h2>
                  <div class="separator"></div>
                </div>
              </div>

              <div class="text">
                <p class="lead">
                  <strong>ROBEX</strong> is MACOBATE’s flagship brand specializing in the design and manufacturing of industrial valves and hydromechanical equipment. With over 40 years of experience, ROBEX provides innovative and reliable solutions for water management and industrial applications.
                </p>

                <h3>Expertise & Capabilities</h3>
                <ul class="list-style-two">
                  <li>Engineering: Custom design tailored to client specifications</li>
                  <li>Manufacturing: In-house production ensuring quality and traceability</li>
                  <li>Rehabilitation: Upgrading and refurbishing existing installations</li>
                  <li>Deployment: On-site installation and commissioning support</li>
               </ul>
                <h3>Product Range</h3>
                <ul class="list-style-two">
                  <li>Water Valves: Altitude valves, flow control valves, pressure reducing valves</li>
                  <li>Industrial Valves: Gate valves, butterfly valves, globe valves</li>
                  <li>Hydromechanical Equipment: Penstocks, radial gates, stop logs</li>
                  <li>Servomotors: Electric and hydraulic actuators for valve automation</li>
                  <li>Electromagnetic Flowmeters</li>
                  
                </ul>





                
                

                <h3>Applications</h3>
                <ul class="list-style-two">
                  <li>Water Infrastructure: Dams, reservoirs, and water treatment plants</li>
                  <li>Industrial Facilities: Chemical, petrochemical, and energy sectors</li>
                  <li>Municipal Systems: Urban water distribution and wastewater management</li>
                </ul>

                <h3>Quality Assurance</h3>
                <p>
                  ROBEX products comply with international standards such as ISO 9001, API, and ANSI, ensuring high performance and durability in demanding environments.
                </p>
              </div>
            </div>
          </div>

          <div class="sidebar-column col-lg-4 col-md-12 col-sm-12">
            <div class="inner-column">
              <!-- Sidebar widgets -->
              <div class="sidebar-widget">
                <h3>Our Other Brands</h3>
                <ul class="brand-links">
                  <li><a href="/our-brands/cranex"><span><GiPulleyHook size={20} color="#007bff" /></span> CRANEX</a></li>
                  <li><a href="/our-brands/tanko"><span><GiWaterTank size={20} color="#007bff" /></span> TANKO</a></li>
                  <li><a href="/our-brands/mws"><span><FaHandHoldingWater size={20} color="#007bff" /></span> MWS</a></li>
                </ul>
              </div>

              <div class="sidebar-widget">
                <div class="project-widget">
                  <div class="widget-content">
                    <h3>Need a Quote?</h3>
                    <p>
                      Our sales team is at your disposal to study your project and offer you the appropriate ROBEX solution.
                    </p>
                    <a
                      href="#"
                       href="../formDevis"
                      class="theme-btn btn-style-one"
                      
                    >
                      Request a Quote <span class="icon flaticon-arrow-pointing-to-right"></span>
                    </a>
                  </div>
                </div>
              </div>

              <div class="sidebar-widget">
                <div class="contact-info">
                  <h3>Contact Directly</h3>
                  <ul>
                    <li>
                      <span class="icon flaticon-telephone"></span> +212 5 37 65 96 46
                    </li>
                    <li>
                      <span class="icon flaticon-envelope-1"></span> robex@macobate.com
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Brand Detail Section -->

    <CallToActionSection />
    <AppointmentForm />
  </main>
  <Footer />
</BaseLayout>

<style>
  
  /* Styles spécifiques pour la page de marque */
  .brand-section {
    padding: 80px 0;
  }

  .brand-header {
    display: flex;
    align-items: center;
    margin-bottom: 40px;
  }

  .brand-logo {
    flex: 0 0 200px;
    margin-right: 30px;
  }

  .brand-logo img {
    max-width: 100%;
    height: auto;
  }

  .brand-intro {
    flex: 1;
  }

  .brand-intro h2 {
    margin-bottom: 15px;
    font-size: 28px;
    color: #1720d7;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    margin: 40px 0;
  }

  .product-item {
    background-color: #f8f9fa;
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 25px;
    transition: all 0.3s ease;
  }

  .product-item:hover {
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
    transform: translateY(-5px);
  }

  .product-icon {
    margin-bottom: 20px;
  }

  .product-icon .icon {
    font-size: 48px;
    color: #1720d7;
  }

  .product-item h4 {
    font-size: 20px;
    margin-bottom: 15px;
    color: #333;
  }

  .list-style-one li {
    position: relative;
    padding-left: 25px;
    margin-bottom: 10px;
    font-size: 14px;
    line-height: 1.6;
  }

  .list-style-one li:before {
    content: "\f105";
    font-family: FontAwesome;
    position: absolute;
    left: 0;
    top: 0;
    color: #1720d7;
  }

  .list-style-two li {
    position: relative;
    padding-left: 25px;
    margin-bottom: 12px;
    font-size: 15px;
  }

  .list-style-two li:before {
    content: "\f00c";
    font-family: FontAwesome;
    position: absolute;
    left: 0;
    top: 0;
    color: #1720d7;
  }

  .brand-links li,
  .download-links li {
    position: relative;
    padding: 12px 0;
    padding-left: 25px;
    border-bottom: 1px solid #e9ecef;
  }

  .brand-links li:last-child,
  .download-links li:last-child {
    border-bottom: none;
  }

  .brand-links li a,
  .download-links li a {
    position: relative;
    display: block;
    color: #333;
    font-size: 16px;
    transition: all 0.3s ease;
  }

  .brand-links li a:hover,
  .download-links li a:hover {
    color: #1720d7;
  }

  .brand-links li a span.icon {
    margin-right: 10px;
    color: #1720d7;
  }

  .download-links li a i {
    margin-right: 10px;
    color: #1720d7;
  }

  .project-widget {
    background-color: #f8f9fa;
    border-radius: 8px;
    overflow: hidden;
  }

  .project-widget .widget-content {
    padding: 30px;
  }

  .project-widget h3 {
    margin-bottom: 15px;
    color: #333;
  }

  .project-widget p {
    margin-bottom: 20px;
  }

  .contact-info ul li {
    position: relative;
    padding-left: 30px;
    margin-bottom: 15px;
    font-size: 16px;
    color: #333;
  }

  .contact-info ul li span.icon {
    position: absolute;
    left: 0;
    top: 3px;
    color: #1720d7;
  }

  .gallery-item {
    margin-bottom: 30px;
  }

  .gallery-item .inner-box {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
  }

  .gallery-item .image {
     width: 100%;
  aspect-ratio: 4 / 3; /* ou 1 / 1 pour carré */
  overflow: hidden;
  position: relative;
  border-radius: 8px;
  background-color: #ddd;
  }

  .gallery-item .image img {
    width: 100%;
  height: 100%;
  object-fit: cover; /* remplissage sans déformation */
  object-position: center;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  }

  .gallery-item .overlay-box {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    background-color: rgba(23, 32, 215, 0.8);
    transition: all 0.3s ease;
  }

  .gallery-item:hover .overlay-box {
    opacity: 1;
  }

  .gallery-item .overlay-inner {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    display: table;
    vertical-align: middle;
    padding: 20px;
    text-align: center;
  }

  .gallery-item .content {
    display: table-cell;
    vertical-align: middle;
  }

  .gallery-item .content h3 {
    color: #fff;
    font-size: 18px;
    font-weight: 600;
    line-height: 1.4;
  }

  @media only screen and (max-width: 991px) {
    .brand-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .brand-logo {
      margin-right: 0;
      margin-bottom: 20px;
    }

    .products-grid {
      grid-template-columns: 1fr;
    }
  }
.brand-links li a {
  display: flex;
  align-items: center;
  gap: 8px;
}

.brand-links li a span {
  display: flex;
  align-items: center;
   margin-right: 15px; /* ajuste la valeur à ton besoin */
}
</style>
