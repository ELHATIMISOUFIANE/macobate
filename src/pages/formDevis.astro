---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CallToActionSection from "../components/CallToActionSection.astro";

// Service options available in the form
const serviceOptions = [
  {
    value: "",
    label: "Select Desired Service",
    disabled: true,
    selected: true,
  },
  {
    value: "steel-construction",
    label: "Steel Construction",
  },
  {
    value: "hydromechanical-equipment",
    label: "Hydromechanical Equipment",
  },
  {
    value: "water-treatment",
    label: "Water Treatment",
  },
  {
    value: "project-management",
    label: "Project Management",
  },
  {
    value: "industrial-maintenance",
    label: "Industrial Maintenance",
  },
  {
    value: "other",
    label: "Other Service",
  },
];

// Endpoint for form submission
const formEndpoint = "/api/contact";
---

<BaseLayout title="Request a Quote | MACOBATE">
  <Header />
  <main>
    <!--Page Title-->
    <section
      class="page-title"
      style="background-image:url(/images/background/6.jpg);
      filter: brightness(1.5)"
    >
      <div class="auto-container">
        <ul class="page-breadcrumb">
          <li><a href="/">Home</a></li>
          <li>Request a Quote</li>
        </ul>
        <h1>Request a Quote</h1>
      </div>
    </section>
    <!--End Page Title-->

    <!-- Form Section -->
    <section class="quote-form-section">
      <div class="auto-container">
        <div class="row clearfix">
          <div class="form-column col-lg-8 col-md-12 col-sm-12">
            <div class="inner-column">
              <div class="sec-title">
                <h2>Request your personalized quote</h2>
                <div class="separator"></div>
                <div class="text">
                  Fill out this form to get a free and no-obligation quote for your project. Our sales team will contact you as soon as possible.
                </div>
              </div>

              <!-- Quote Form -->
              <div class="default-form">
                <form method="post" action={formEndpoint} id="quote-form">
                  <div class="row clearfix">
                    <!-- Personal information -->
                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                      <label>Name <span class="required">*</span></label>
                      <input
                        type="text"
                        name="name"
                        placeholder="Your full name"
                        required
                      />
                    </div>

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                      <label>Company <span class="required">*</span></label>
                      <input
                        type="text"
                        name="company"
                        placeholder="Your company name"
                        required
                      />
                    </div>

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                      <label>Email <span class="required">*</span></label>
                      <input
                        type="email"
                        name="email"
                        placeholder="Your email address"
                        required
                      />
                    </div>

                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                      <label>Phone <span class="required">*</span></label>
                      <input
                        type="text"
                        name="phone"
                        placeholder="Your phone number"
                        required
                      />
                    </div>

                    <!-- Project information -->
                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                      <label>Service <span class="required">*</span></label>
                      <select class="custom-select-box" name="service" required>
                        {
                          serviceOptions.map((option) => (
                            <option
                              value={option.value}
                              disabled={option.disabled}
                              selected={option.selected}
                            >
                              {option.label}
                            </option>
                          ))
                        }
                      </select>
                    </div>

                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                      <label
                        >Project description <span class="required">*</span
                        ></label
                      >
                      <textarea
                        name="message"
                        placeholder="Describe your project in detail (requirements, deadlines, technical specifications...)"
                        rows="6"
                        required></textarea>
                    </div>

                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                      <label>How did you hear about MACOBATE?</label>
                      <select class="custom-select-box" name="source">
                        <option value="" selected disabled
                          >Select an option</option
                        >
                        <option value="search-engine">Search engine</option>
                        <option value="recommendation">Recommendation</option>
                        <option value="social-media">Social media</option>
                        <option value="trade-show"
                          >Trade show</option
                        >
                        <option value="other">Other</option>
                      </select>
                    </div>

                    <!-- GDPR -->
                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                      <div class="check-box">
                        <input
                          type="checkbox"
                          name="privacy_accepted"
                          id="privacy_accepted"
                          required
                        />
                        <label for="privacy_accepted">
                          I agree that my data may be used to process my request in accordance with the <a
                            href="/privacy-policy"
                            target="_blank">privacy policy</a
                          >
                          <span class="required">*</span>
                        </label>
                      </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                      <div class="text-right">
                        <button
                          class="theme-btn btn-style-one"
                          type="submit"
                          name="submit-form"
                          id="submit-form"
                        >
                          Send my request
                          <span class="icon flaticon-arrow-pointing-to-right"
                          ></span>
                        </button>
                      </div>
                    </div>
                  </div>
                </form>

                <!-- Success Message (hidden by default) -->
                <div class="form-success" style="display: none;">
                  <div class="success-icon">
                    <i class="fa fa-check-circle" aria-hidden="true"></i>
                  </div>
                  <h3>Request sent successfully!</h3>
                  <p>
                    Thank you for your quote request. Our team will review your project and contact you as soon as possible, usually within 24 to 48 business hours.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Info Column -->
          <div class="info-column col-lg-4 col-md-12 col-sm-12">
            <div class="inner-column">
              <!-- Why Choose Us -->
              <div class="why-choose-us">
                <h3>Why choose us</h3>
                <div class="text">
                  MACOBATE supports you in all your industrial projects with recognized expertise for over 40 years.
                </div>
                <ul class="list-style-one">
                  <li>Certified technical expertise</li>
                  <li>Personalized support</li>
                  <li>Responsiveness and availability</li>
                  <li>Tailor-made solutions</li>
                  <li>Respect for deadlines and budgets</li>
                </ul>
              </div>

              <!-- Contact Info -->
              <div class="contact-info">
                <h3>Direct contact</h3>
                <ul>
                  <li>
                    <span class="icon flaticon-telephone"></span>
                    <strong>Phone:</strong> +212 5 37 65 96 46
                  </li>
                  <li>
                    <span class="icon flaticon-envelope-1"></span>
                    <strong>Email:</strong> contact@macobate.com
                  </li>
                  <li>
                    <span class="icon flaticon-map"></span>
                    <strong>Address:</strong> Industrial Zone, Rabat, Morocco
                  </li>
                </ul>
              </div>

              <!-- Business Hours -->
              <div class="business-hours">
                <h3>Business hours</h3>
                <ul>
                  <li>
                    Monday - Friday: <span>8:30 AM - 5:30 PM</span>
                  </li>
                  <li>
                    Saturday: <span>9:00 AM - 1:00 PM</span>
                  </li>
                  <li>
                    Sunday: <span>Closed</span>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Form Section -->

    <!-- FAQ Section -->
    <section class="faq-section" style="background-color: #f8f9fa;">
      <div class="auto-container">
        <div class="sec-title centered">
          <h2>Frequently asked questions</h2>
          <div class="separator"></div>
        </div>

        <div class="row clearfix">
          <div class="col-lg-10 col-md-12 col-sm-12 offset-lg-1">
            <div class="faq-block">
              <div class="accordion-box">
                <!-- Question 1 -->
                <div class="accordion block">
                  <div class="acc-btn">
                    How does the quotation process work?
                    <div class="icon fa fa-plus"></div>
                  </div>
                  <div class="acc-content">
                    <div class="content">
                      <p>
                        After receiving your request, our sales team reviews your project and contacts you to clarify certain points if necessary. A detailed quote is then sent to you within 3 to 5 business days, including a precise description of services, deadlines and pricing.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Question 2 -->
                <div class="accordion block">
                  <div class="acc-btn">
                    What information should I provide to get an accurate quote?
                    <div class="icon fa fa-plus"></div>
                  </div>
                  <div class="acc-content">
                    <div class="content">
                      <p>
                        For an optimal quote, we recommend providing the following elements:
                      </p>
                      <ul>
                        <li>Detailed project description</li>
                        <li>Technical plans or diagrams if available</li>
                        <li>Provisional schedule</li>
                        <li>Specific constraints</li>
                        <li>Indicative budget</li>
                      </ul>
                      <p>
                        The more precise the information, the better our proposal will be adapted to your needs.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Question 3 -->
                <div class="accordion block">
                  <div class="acc-btn">
                    Are quotes free and without obligation?
                    <div class="icon fa fa-plus"></div>
                  </div>
                  <div class="acc-content">
                    <div class="content">
                      <p>
                        Yes, all our quotes are completely free and without any obligation on your part. We believe in transparency and want to enable you to make an informed decision about your project.
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Question 4 -->
                <div class="accordion block">
                  <div class="acc-btn">
                    What is the validity period of a MACOBATE quote?
                    <div class="icon fa fa-plus"></div>
                  </div>
                  <div class="acc-content">
                    <div class="content">
                      <p>
                        Our quotes are generally valid for a period of 30 days from their date of issue. After this period, prices may be subject to revision based on the evolution of raw material costs and other external factors.
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End FAQ Section -->

    <!-- CTA Component -->
    <CallToActionSection />
  </main>
  <Footer />
</BaseLayout>

<style>
  /* Styles for quote request page */
  .quote-form-section {
    position: relative;
    padding: 80px 0;
  }

  .form-column .inner-column {
    position: relative;
    padding-right: 20px;
  }

  .info-column .inner-column {
    position: relative;
    padding: 30px;
    background-color: #f8f9fa;
    border-radius: 8px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
  }

  .default-form {
    position: relative;
    margin-top: 40px;
  }

  .default-form .form-group {
    position: relative;
    margin-bottom: 25px;
  }

  .default-form .form-group label {
    position: relative;
    display: block;
    font-size: 15px;
    font-weight: 600;
    color: #333;
    margin-bottom: 10px;
  }

  .default-form .form-group .required {
    color: #e63946;
  }

  .default-form .form-group input[type="text"],
  .default-form .form-group input[type="email"],
  .default-form .form-group select,
  .default-form .form-group textarea {
    position: relative;
    display: block;
    width: 100%;
    height: 50px;
    font-size: 14px;
    color: #333333;
    padding: 10px 20px;
    line-height: 28px;
    background: #ffffff;
    border: 1px solid #dddddd;
    transition: all 0.3s ease;
    border-radius: 4px;
  }

  .default-form .form-group textarea {
    height: 180px;
    resize: none;
  }

  .default-form .form-group input:focus,
  .default-form .form-group select:focus,
  .default-form .form-group textarea:focus {
    border-color: #1720d7;
    box-shadow: 0 0 10px rgba(23, 32, 215, 0.1);
  }

  .check-box {
    position: relative;
    margin-top: 10px;
  }

  .check-box label {
    position: relative;
    padding-left: 30px;
    line-height: 22px;
    cursor: pointer;
    color: #666;
    font-size: 15px;
    font-weight: 400;
    transition: all 300ms ease;
  }

  .check-box input {
    position: absolute;
    left: 0px;
    top: 0px;
    opacity: 0;
  }

  .check-box label:before {
    position: absolute;
    content: "";
    left: 0px;
    top: 0px;
    width: 22px;
    height: 22px;
    border: 1px solid #dddddd;
    border-radius: 2px;
    transition: all 300ms ease;
  }

  .check-box label:after {
    position: absolute;
    content: "\f00c";
    left: 0px;
    top: 0px;
    width: 22px;
    height: 22px;
    font-size: 14px;
    line-height: 22px;
    text-align: center;
    font-family: "FontAwesome";
    color: #1720d7;
    opacity: 0;
    transition: all 300ms ease;
  }

  .check-box input:checked + label:after {
    opacity: 1;
  }

  .check-box label a {
    color: #1720d7;
    text-decoration: underline;
  }

  .check-box label a:hover {
    text-decoration: none;
  }

  /* Success Message */
  .form-success {
    text-align: center;
    padding: 40px;
    background-color: #f8f9fa;
    border-radius: 8px;
  }

  .success-icon {
    font-size: 60px;
    color: #28a745;
    margin-bottom: 20px;
  }

  .form-success h3 {
    font-size: 24px;
    color: #333;
    margin-bottom: 15px;
  }

  .form-success p {
    color: #666;
  }

  /* Why Choose Us */
  .why-choose-us {
    position: relative;
    margin-bottom: 40px;
  }

  .why-choose-us h3 {
    position: relative;
    font-size: 20px;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
  }

  .why-choose-us .text {
    position: relative;
    margin-bottom: 20px;
  }

  .list-style-one {
    position: relative;
  }

  .list-style-one li {
    position: relative;
    padding-left: 25px;
    margin-bottom: 10px;
    font-size: 15px;
    color: #666;
  }

  .list-style-one li:before {
    content: "\f00c";
    font-family: FontAwesome;
    position: absolute;
    left: 0;
    top: 0;
    color: #1720d7;
  }

  /* Contact Info */
  .contact-info {
    position: relative;
    margin-bottom: 40px;
  }

  .contact-info h3 {
    position: relative;
    font-size: 20px;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
  }

  .contact-info ul li {
    position: relative;
    padding-left: 30px;
    margin-bottom: 15px;
    font-size: 15px;
    color: #666;
  }

  .contact-info ul li .icon {
    position: absolute;
    left: 0;
    top: 3px;
    color: #1720d7;
  }

  .contact-info ul li strong {
    display: block;
    color: #333;
    margin-bottom: 3px;
  }

  /* Business Hours */
  .business-hours {
    position: relative;
  }

  .business-hours h3 {
    position: relative;
    font-size: 20px;
    font-weight: 600;
    color: #333;
    margin-bottom: 15px;
  }

  .business-hours ul li {
    position: relative;
    margin-bottom: 8px;
    font-size: 15px;
    color: #666;
    display: flex;
    justify-content: space-between;
  }

  .business-hours ul li span {
    color: #1720d7;
    font-weight: 600;
  }

  /* FAQ Section */
  .faq-section {
    position: relative;
    padding: 80px 0;
  }

  .accordion-box {
    position: relative;
    margin-top: 40px;
  }

  .accordion-box .block {
    position: relative;
    margin-bottom: 15px;
    border-radius: 4px;
    overflow: hidden;
    background-color: #fff;
    box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
  }

  .accordion-box .acc-btn {
    position: relative;
    font-size: 18px;
    font-weight: 600;
    color: #333;
    line-height: 30px;
    padding: 15px 50px 15px 30px;
    cursor: pointer;
    transition: all 500ms ease;
  }

  .accordion-box .acc-btn .icon {
    position: absolute;
    right: 30px;
    top: 15px;
    font-size: 16px;
    color: #1720d7;
    transition: all 500ms ease;
  }

  .accordion-box .acc-btn.active {
    background-color: #1720d7;
    color: #ffffff;
  }

  .accordion-box .acc-btn.active .icon {
    color: #ffffff;
    transform: rotate(180deg);
  }

  .accordion-box .acc-content {
    position: relative;
    display: none;
  }

  .accordion-box .acc-content.current {
    display: block;
  }

  .accordion-box .acc-content .content {
    position: relative;
    padding: 20px 30px;
    border-top: 1px solid #f0f0f0;
  }

  .accordion-box .acc-content .content p {
    position: relative;
    font-size: 15px;
    line-height: 1.8em;
    color: #666;
    margin-bottom: 15px;
  }

  .accordion-box .acc-content .content p:last-child {
    margin-bottom: 0;
  }

  .accordion-box .acc-content .content ul {
    position: relative;
    margin-bottom: 15px;
    padding-left: 20px;
  }

  .accordion-box .acc-content .content ul li {
    position: relative;
    margin-bottom: 8px;
    font-size: 15px;
    color: #666;
  }

  /* Responsive Styles */
  @media only screen and (max-width: 991px) {
    .form-column .inner-column {
      padding-right: 0;
      margin-bottom: 40px;
    }
  }

  @media only screen and (max-width: 767px) {
    .quote-form-section {
      padding: 60px 0;
    }

    .faq-section {
      padding: 60px 0;
    }

    .accordion-box .acc-btn {
      font-size: 16px;
      padding: 12px 40px 12px 20px;
    }

    .accordion-box .acc-btn .icon {
      right: 20px;
    }

    .accordion-box .acc-content .content {
      padding: 15px 20px;
    }
  }
</style>

<script>
  // Script to handle form and FAQ display
  document.addEventListener("DOMContentLoaded", function () {
    // Handle form submission
    const quoteForm = document.getElementById("quote-form");
    const formSuccess = document.querySelector(".form-success");

    if (quoteForm) {
      quoteForm.addEventListener("submit", async function (e) {
        e.preventDefault();

        // Show loading indicator
        const submitBtn = document.getElementById("submit-form");
        const originalText = submitBtn.innerHTML;
        submitBtn.innerHTML =
          'Sending... <i class="fa fa-spinner fa-spin"></i>';
        submitBtn.disabled = true;

        // Create FormData object to retrieve form data
        const formData = new FormData(quoteForm);

        try {
          // Simulate sending delay (to be replaced with your actual API call)
          // In a production environment, you would use your own sending code:
          // const response = await fetch(quoteForm.action, {
          //   method: 'POST',
          //   body: formData
          // });

          // Demo simulation
          await new Promise((resolve) => setTimeout(resolve, 1500));

          // Hide form and show success message
          quoteForm.style.display = "none";
          formSuccess.style.display = "block";

          // Scroll to success message
          formSuccess.scrollIntoView({ behavior: "smooth", block: "start" });

          // Reset form (in case user goes back)
          quoteForm.reset();
        } catch (error) {
          console.error("Error:", error);
          alert(
            "An error occurred while sending the form. Please try again or contact us directly by phone."
          );

          // Reset button
          submitBtn.innerHTML = originalText;
          submitBtn.disabled = false;
        }
      });
    }

    // Handle FAQ accordion
    const accordionBtns = document.querySelectorAll(".acc-btn");

    accordionBtns.forEach((btn) => {
      btn.addEventListener("click", function () {
        const currentContent = this.nextElementSibling;
        const isActive = this.classList.contains("active");

        // Close all accordions
        document.querySelectorAll(".acc-btn").forEach((otherBtn) => {
          otherBtn.classList.remove("active");
          otherBtn.querySelector(".icon").classList.remove("fa-minus");
          otherBtn.querySelector(".icon").classList.add("fa-plus");

          if (otherBtn.nextElementSibling) {
            otherBtn.nextElementSibling.style.display = "none";
          }
        });

        // If accordion wasn't active, open it
        if (!isActive) {
          this.classList.add("active");
          this.querySelector(".icon").classList.remove("fa-plus");
          this.querySelector(".icon").classList.add("fa-minus");

          if (currentContent) {
            currentContent.style.display = "block";
          }
        }
      });
    });
  });
</script>