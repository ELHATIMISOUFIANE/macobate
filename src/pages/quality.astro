---
import BaseLayout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CallToActionSection from "../components/CallToActionSection.astro";
import { PiCertificateBold } from "react-icons/pi";
import { GrValidate } from "react-icons/gr";
import { FaPlaceOfWorship , FaHandHoldingWater } from "react-icons/fa";
import { IoIosContacts } from "react-icons/io";
import { MdOutlineSecurity } from "react-icons/md";
---

<BaseLayout title="Excellence & Quality | MACOBATE">
  <Header />
  <main>
    <!--Page Title-->
    <section
      class="page-title"
      style="background-image:url(/images/background/6.jpg)"
    >
      <div class="auto-container">
        <ul class="page-breadcrumb">
          <li><a href="/">Home</a></li>
          <li>Quality</li>
        </ul>
        <h1>Excellence & Quality</h1>
      </div>
    </section>
    <!--End Page Title-->

    <!-- Quality Section -->
    <section class="quality-section">
      <div class="auto-container">
        <div class="sec-title centered">
          <h2>ðŸ§  Why choose MACOBATE?</h2>
          <div class="separator"></div>
          <div class="text">
            MACOBATE stands out for its commitment to technical excellence and its ability to deliver complex engineering solutions with impeccable quality.
          </div>
        </div>

        <div class="row clearfix">
          <!-- Strengths Grid -->
          <div class="col-lg-12">
            <div class="strengths-grid">
              <!-- Strength 1 -->
              <div class="strength-block">
                <div class="inner-box">
                  <div class="icon-box" style="background-color: #0056b3;">
                    <span class="icon"><PiCertificateBold /></span>
                  </div>
                  <h3>Certified Engineering</h3>
                  <div class="text">
                    Our operations comply with the most demanding international standards, ensuring quality and reliability in every project.
                  </div>
                  <div class="certifications">
                    <span class="cert-badge">ISO 9001</span>
                    <span class="cert-badge">ISO 14001</span>
                    <span class="cert-badge">ASME</span>
                    <span class="cert-badge">EN 1090</span>
                    <span class="cert-badge">ATEX</span>
                  </div>
                </div>
              </div>

              <!-- Strength 2 -->
              <div class="strength-block">
                <div class="inner-box">
                  <div class="icon-box" style="background-color: #00879e;">
                    <span class="icon"><GrValidate /></span>
                  </div>
                  <h3>100% Integrated Execution</h3>
                  <div class="text">
                    From design to commissioning, we master the entire value chain for total control over quality and deadlines.
                  </div>
                  <ul class="list-style-two">
                    <li>Design</li>
                    <li>Manufacturing</li>
                    <li>Installation</li>
                    <li>Commissioning</li>
                    <li>Maintenance</li>
                  </ul>
                </div>
              </div>

              <!-- Strength 3 -->
              <div class="strength-block">
                <div class="inner-box">
                  <div class="icon-box" style="background-color: #e63946;">
                    <span class="icon"><FaPlaceOfWorship/></span>
                  </div>
                  <h3>State-of-the-Art Workshop</h3>
                  <div class="text">
                    Our modern infrastructure and latest generation equipment allow us to carry out complex manufacturing with exceptional precision.
                  </div>
                  <ul class="list-style-two">
                    <li>CNC plasma/laser cutting</li>
                    <li>Robotic welding</li>
                    <li>Precision machining</li>
                    <li>Advanced quality control</li>
                  </ul>
                </div>
              </div>

              <!-- Strength 4 -->
              <div class="strength-block">
                <div class="inner-box">
                  <div class="icon-box" style="background-color: #2a9d8f;">
                    <span class="icon"><FaHandHoldingWater/></span>
                  </div>
                  <h3>Expertise in Water, Energy and Industry</h3>
                  <div class="text">
                    Our technical know-how extends to several strategic sectors, allowing us to provide solutions adapted to various challenges.
                  </div>
                  <ul class="list-style-two">
                    <li>Hydraulics</li>
                    <li>Hydroelectricity</li>
                    <li>Water treatment</li>
                    <li>Industrial structures</li>
                    <li>Infrastructure</li>
                  </ul>
                </div>
              </div>

              <!-- Strength 5 -->
              <div class="strength-block">
                <div class="inner-box">
                  <div class="icon-box" style="background-color: #6a0dad;">
                    <span class="icon"><IoIosContacts/></span>
                  </div>
                  <h3>Public Clients and International Partners</h3>
                  <div class="text">
                    We collaborate with government organizations and international partners on major projects across Africa and beyond.
                  </div>
                  <ul class="list-style-two">
                    <li>Governments</li>
                    <li>Development agencies</li>
                    <li>Industrial groups</li>
                    <li>International engineering firms</li>
                  </ul>
                </div>
              </div>
              
              <!-- Strength 6 -->
              <div class="strength-block">
                <div class="inner-box">
                  <div class="icon-box" style="background-color: #f4a261;">
                    <span class="icon"><MdOutlineSecurity /></span>
                  </div>
                  <h3>Priority on Safety and Sustainability</h3>
                  <div class="text">
                    The safety of our teams, partners and the environment is at the heart of our approach. Our projects systematically integrate sustainable and responsible practices.
                  </div>
                  <ul class="list-style-two">
                    <li>Strict HSE standards</li>
                    <li>Continuous safety training</li>
                    <li>Carbon footprint reduction</li>
                    <li>Use of sustainable materials</li>
                    <li>Eco-conscious approach</li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Quality Section -->

    <!-- Process Section -->
    <section class="process-section" style="background-color: #f8f9fa;">
      <div class="auto-container">
        <div class="sec-title centered">
          <h2>Our Quality Commitment</h2>
          <div class="separator"></div>
          <div class="text">
            At MACOBATE, quality is not simply a standard to reach, it's a philosophy that guides each of our actions.
          </div>
        </div>

        <div class="process-blocks">
          <div class="row clearfix">
            <!-- Process Block 1 -->
            <div class="process-block col-lg-3 col-md-6 col-sm-12">
              <div class="inner-box">
                <div class="step-number">01</div>
                <h3>Rigorous Planning</h3>
                <div class="text">
                  Every project begins with meticulous planning that anticipates challenges and optimizes resources.
                </div>
              </div>
            </div>

            <!-- Process Block 2 -->
            <div class="process-block col-lg-3 col-md-6 col-sm-12">
              <div class="inner-box">
                <div class="step-number">02</div>
                <h3>Systematic Quality Control</h3>
                <div class="text">
                  Regular inspections and thorough testing ensure compliance with our high standards.
                </div>
              </div>
            </div>

            <!-- Process Block 3 -->
            <div class="process-block col-lg-3 col-md-6 col-sm-12">
              <div class="inner-box">
                <div class="step-number">03</div>
                <h3>Complete Documentation</h3>
                <div class="text">
                  All aspects of the project are documented with precision to ensure traceability and transparency.
                </div>
              </div>
            </div>

            <!-- Process Block 4 -->
            <div class="process-block col-lg-3 col-md-6 col-sm-12">
              <div class="inner-box">
                <div class="step-number">04</div>
                <h3>Continuous Improvement</h3>
                <div class="text">
                  We analyze every project to identify improvement opportunities and perfect our processes.
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Process Section -->

    <!-- Testimonials Section -->
    <section class="testimonials-section">
      <div class="auto-container">
        <div class="sec-title centered">
          <h2>What Our Clients Say</h2>
          <div class="separator"></div>
        </div>

        <div class="testimonials-carousel owl-carousel owl-theme">
          <!-- Testimonial Block 1 -->
          <div class="testimonial-block">
            <div class="inner-box">
              <div class="quote-icon">
                <span class="icon flaticon-quote"></span>
              </div>
              <div class="text">
                "MACOBATE demonstrated exceptional professionalism and technical expertise throughout our collaboration on the dam project. Their ability to solve complex problems and meet deadlines was remarkable."
              </div>
              <div class="author-info">
                <h4>Ahmed Benali</h4>
                <div class="designation">Project Director, Ministry of Water Resources</div>
              </div>
            </div>
          </div>

          <!-- Testimonial Block 2 -->
          <div class="testimonial-block">
            <div class="inner-box">
              <div class="quote-icon">
                <span class="icon flaticon-quote"></span>
              </div>
              <div class="text">
                "The manufacturing quality of equipment supplied by MACOBATE for our water treatment plant exceeded our expectations. Their integrated approach allowed us to simplify project management and achieve an impeccable final result."
              </div>
              <div class="author-info">
                <h4>Sophie Martin</h4>
                <div class="designation">Operations Manager, International Industrial Group</div>
              </div>
            </div>
          </div>

          <!-- Testimonial Block 3 -->
          <div class="testimonial-block">
            <div class="inner-box">
              <div class="quote-icon">
                <span class="icon flaticon-quote"></span>
              </div>
              <div class="text">
                "We appreciated MACOBATE's commitment to technical excellence and their ability to adapt to local specificities. Their expertise in hydraulic engineering was a considerable asset for the success of our infrastructure project."
              </div>
              <div class="author-info">
                <h4>Ibrahim Diallo</h4>
                <div class="designation">Department Head, Development Agency</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!-- End Testimonials Section -->

    <!-- CTA Component -->
    <CallToActionSection />
  </main>
  <Footer />
</BaseLayout>

<style>
  /* Quality Section Styles */
  .quality-section {
    position: relative;
    padding: 80px 0 50px;
  }

  .strengths-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 30px;
    margin-top: 50px;
  }

  .strength-block .inner-box {
    position: relative;
    background-color: #fff;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .strength-block .inner-box:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.15);
  }

  .strength-block .icon-box {
    position: relative;
    padding: 25px;
    text-align: center;
    color: #fff;
  }

  .strength-block .icon {
    font-size: 3rem;
    line-height: 1;
  }

  .strength-block h3 {
    position: relative;
    font-size: 20px;
    font-weight: 600;
    margin: 25px 25px 15px;
    color: #333;
  }

  .strength-block .text {
    position: relative;
    padding: 0 25px;
    margin-bottom: 20px;
    font-size: 15px;
    line-height: 1.7;
    color: #666;
  }

  .certifications {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 0 25px 25px;
  }

  .cert-badge {
    background-color: #f0f4f8;
    color: #0056b3;
    padding: 6px 12px;
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
  }

  .list-style-two {
    list-style: none;
    padding: 0 25px 25px;
    margin: 0;
  }

  .list-style-two li {
    position: relative;
    padding-left: 25px;
    margin-bottom: 10px;
    font-size: 15px;
    color: #666;
  }

  .list-style-two li:before {
    content: "\f00c";
    font-family: FontAwesome;
    position: absolute;
    left: 0;
    top: 0;
    color: #1720d7;
  }

  /* Process Section Styles */
  .process-section {
    position: relative;
    padding: 80px 0;
  }

  .process-blocks {
    position: relative;
    margin-top: 50px;
  }

  .process-block .inner-box {
    position: relative;
    text-align: center;
    padding: 30px 20px;
    background-color: #fff;
    border-radius: 8px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    height: 100%;
  }

  .process-block .inner-box:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .process-block .step-number {
    position: relative;
    width: 60px;
    height: 60px;
    background-color: #1720d7;
    color: #fff;
    font-size: 24px;
    font-weight: 700;
    line-height: 60px;
    border-radius: 50%;
    margin: 0 auto 20px;
  }

  .process-block h3 {
    position: relative;
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 15px;
    color: #333;
  }

  .process-block .text {
    position: relative;
    font-size: 15px;
    line-height: 1.7;
    color: #666;
  }

  /* Testimonials Section Styles */
  .testimonials-section {
    position: relative;
    padding: 80px 0;
  }

  .testimonial-block .inner-box {
    position: relative;
    background-color: #fff;
    border-radius: 8px;
    padding: 35px 30px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
    height: 100%;
  }

  .testimonial-block .inner-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .testimonial-block .quote-icon {
    position: relative;
    margin-bottom: 20px;
  }

  .testimonial-block .quote-icon .icon {
    position: relative;
    font-size: 30px;
    color: #1720d7;
    opacity: 0.2;
  }

  .testimonial-block .text {
    position: relative;
    font-size: 16px;
    line-height: 1.8;
    color: #666;
    margin-bottom: 25px;
  }

  .testimonial-block .author-info {
    position: relative;
    padding-top: 15px;
    border-top: 1px solid #e9ecef;
  }

  .testimonial-block .author-info h4 {
    position: relative;
    font-size: 18px;
    font-weight: 600;
    color: #333;
    margin-bottom: 5px;
  }

  .testimonial-block .author-info .designation {
    position: relative;
    font-size: 14px;
    color: #1720d7;
  }

  /* Responsive Styles */
  @media only screen and (max-width: 991px) {
    .strengths-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media only screen and (max-width: 767px) {
    .strengths-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Initialize carousel for testimonials (if you use Owl Carousel)
  document.addEventListener('DOMContentLoaded', function() {
    if (typeof $.fn.owlCarousel !== 'undefined') {
      $('.testimonials-carousel').owlCarousel({
        loop: true,
        margin: 30,
        nav: true,
        smartSpeed: 500,
        autoplay: true,
        navText: ['<span class="fa fa-angle-left"></span>', '<span class="fa fa-angle-right"></span>'],
        responsive: {
          0: {
            items: 1
          },
          768: {
            items: 2
          },
          1024: {
            items: 3
          }
        }
      });
    }
  });
</script>