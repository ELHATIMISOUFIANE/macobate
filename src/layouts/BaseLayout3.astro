---

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
}

const { 
  title = "macobate- Solutions industrielles innovantes",
  description = "macobate Industry vous propose des solutions industrielles innovantes et durables. Nos services incluent l'automatisation, la fabrication et plus encore.",
  image = "/images/og-image.jpg",
  canonicalURL = Astro.url.href
} = Astro.props;
import { getSchemaOrgMarkup } from '../lib/';
// Déterminer quel schema utiliser selon la page
let schemaMarkup = '';
switch(pageType) {
  case 'home':
    schemaMarkup = homePageSchema;
    break;
  case 'about':
    schemaMarkup = aboutPageSchema;
    break;
  case 'market':
    schemaMarkup = marketSectorsSchema;
    break;
  case 'contact':
    schemaMarkup = contactPageSchema;
    break;
  case 'blog':
    schemaMarkup = blogPageSchema;
    break;
  default:
    schemaMarkup = homePageSchema;
}
