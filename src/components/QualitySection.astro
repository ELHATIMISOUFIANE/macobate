---
// QualitySection.astro - Version internationalisée
import { FaCertificate, FaDraftingCompass, FaTools, FaHandHoldingWater } from "react-icons/fa";
import { GrAchievement } from "react-icons/gr";
import { GiBoltDrop } from "react-icons/gi";
import { getTranslations } from '../../i18n/translations.js';

// Récupération de la langue depuis l'URL
const currentPath = Astro.url.pathname;
const isfrench = currentPath.startsWith('/fr');
const lang = isfrench ? 'fr' : 'en';
const t = getTranslations(lang);

// Points forts avec traductions
const highlights = [
  {
    id: 1,
    title: t.quality.highlights[0].title,
    icon: "FaTools", 
    link: "quality",
  },
  {
    id: 2,
    title: t.quality.highlights[1].title,
    icon: "FaHandHoldingWater", 
    link: "quality",
  },
  {
    id: 3,
    title: t.quality.highlights[2].title,
    icon: "GiBoltDrop", 
    link: "quality",
  },
  {
    id: 4,
    title: t.quality.highlights[3].title,
    icon: 'FaDraftingCompass', 
    link: "quality",
  },
  {
    id: 5,
    title: t.quality.highlights[4].title,
    icon: "GrAchievement",
    link: "quality",
  },
];
---

<section class="highlights-section">
  <div
    id="rejoignez-equipe"
    class="image-layer"
    style="background-image:url(/images/background/point-fort.jpg)"
  >
  </div>
  <div class="auto-container">
    <div class="row clearfix">
      <!--Content Column-->
      <div class="content-column col-md-6 col-sm-12 col-xs-12">
        <div class="inner-column">
          <div class="sec-title">
            <h2>{t.quality.title}</h2>
            <div class="separator centered"></div>
          </div>

          <div class="row clearfix">
            {/* Boucle sur le tableau des points forts */}
            {
              highlights.map((item) => (
                <div class="hightlight-block col-md-4 col-sm-6 col-xs-12">
                  <div class="hightlight-inner">
                    <div class="icon-box">
                      {item.icon && (
                        <span class="icon">
                          {item.icon === 'FaDraftingCompass' && <FaDraftingCompass size={40} color="#007bff" />}
                          {item.icon === 'GrAchievement' && <GrAchievement size={40} color="#007bff" />}
                          {item.icon === 'FaTools' && <FaTools size={40} color="#007bff" />}
                          {item.icon === 'FaHandHoldingWater' && <FaHandHoldingWater size={40} color="#007bff" />}
                          {item.icon === 'GiBoltDrop' && <GiBoltDrop size={40} color="#007bff" />}
                        </span>
                      )}
                    </div>
                    <h3>{item.title}</h3>
                    <a href={item.link} class="overlay-link" />
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>

      <!--Services Column-->
      <div class="services-column col-md-6 col-sm-12 col-xs-12">
        <div class="inner-column">
          <div class="upper-box">
            <div class="icon flaticon-target"></div>
            <h2>{t.quality.subtitle}</h2>
          </div>
          <div class="text">
            <br>
            <br>
            {t.quality.description}
          </div>
          <a href="quality" class="services">
            {t.quality.viewReferences}<span class="icon flaticon-arrow-pointing-to-right"></span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
.icon-box {
  width: 56px;
  height: 56px;
  background-color: #f8f9fa; /* Gris très clair */
  border: 1px solid #dee2e6; /* Bord léger */
  border-radius: 6px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 12px;
}

.icon-box img {
  width: 28px;
  height: 28px;
  object-fit: contain;
}

