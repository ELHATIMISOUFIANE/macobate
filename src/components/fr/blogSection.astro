---
import { blogUtils } from "../../data/blogFr.js";
import { FaCalendarAlt, FaUser } from "react-icons/fa";

// Récupération des articles en vedette
const featuredArticles = blogUtils.getFeaturedArticles(3);
---

<!-- Blog Section -->
<section class="blog-section">
  <div class="auto-container">
    <div class="sec-title centered">
      <h2>Actualités & Innovations</h2>
      <div class="separator"></div>
      <div class="text">
        Découvrez nos derniers projets, innovations technologiques et actualités de l'entreprise
      </div>
    </div>
    
    <div class="row clearfix">
      {featuredArticles.map((article, index) => (
        <div class="news-block col-lg-4 col-md-6 col-sm-12" data-aos="fade-up" data-aos-delay={`${index * 100}`}>
          <div class="inner-box">
            <div class="image">
              <a href={`/blog/detail?id=${article.id}`}>
                <img src={article.image} alt={article.title} />
                <div class="overlay">
                  <span class="icon flaticon-link"></span>
                </div>
              </a>
              <div class="post-date">
                <span>{article.date.split(' ')[0]}</span>
                {article.date.split(' ')[1]}
              </div>
            </div>
            <div class="lower-content">
              <div class="category">
                <a href={`/blog?category=${article.category}`}>{article.category}</a>
              </div>
              <h3>
                <a href={`/blog/detail?id=${article.id}`}>{article.title}</a>
              </h3>
              <div class="post-meta">
                <ul>
                  <li>
                    <span class="icon"><FaUser /></span>
                    {article.author}
                  </li>
                  <li>
                    <span class="icon"><FaCalendarAlt /></span>
                    {article.date}
                  </li>
                </ul>
              </div>
              <div class="text">{article.excerpt}</div>
              <a href="#" class="read-more">
                Lire la suite <span class="icon flaticon-arrow-pointing-to-right"></span>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="btn-box text-center">
      <a href="/fr/blog" class="theme-btn btn-style-one">
        Voir toutes les actualités <span class="icon flaticon-arrow-pointing-to-right"></span>
      </a>
    </div>
  </div>
</section>
<!-- End Blog Section -->

<style>
  /* Blog Section Styles */
  .blog-section {
    position: relative;
    padding: 80px 0;
    background-color: #f8f9fa;
  }

  .blog-section .news-block {
    position: relative;
    margin-bottom: 40px;
  }

  .blog-section .news-block .inner-box {
    position: relative;
    background-color: #ffffff;
    box-shadow: 0 5px 30px rgba(0, 0, 0, 0.05);
    border-radius: 8px;
    overflow: hidden;
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .blog-section .news-block .inner-box:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
  }

  /* Image Box */
  .blog-section .news-block .image {
    position: relative;
    overflow: hidden;
    height: 250px;
  }

  .blog-section .news-block .image img {
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.5s ease;
  }

  .blog-section .news-block:hover .image img {
    transform: scale(1.05);
  }

  /* Overlay */
  .blog-section .news-block .image .overlay {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(23, 32, 215, 0.8);
    opacity: 0;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .blog-section .news-block:hover .image .overlay {
    opacity: 1;
  }

  .blog-section .news-block .image .overlay .icon {
    font-size: 30px;
    color: #ffffff;
  }

  /* Post Date */
  .blog-section .news-block .post-date {
    position: absolute;
    left: 20px;
    top: 20px;
    background-color: #1720d7;
    color: #ffffff;
    padding: 8px 15px;
    text-align: center;
    border-radius: 5px;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .blog-section .news-block .post-date span {
    display: block;
    font-size: 20px;
    line-height: 1;
    margin-bottom: 3px;
  }

  /* Lower Content */
  .blog-section .news-block .lower-content {
    position: relative;
    padding: 30px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  /* Category */
  .blog-section .news-block .category {
    position: relative;
    margin-bottom: 12px;
  }

  .blog-section .news-block .category a {
    position: relative;
    display: inline-block;
    font-size: 12px;
    line-height: 20px;
    color: #1720d7;
    font-weight: 600;
    text-transform: uppercase;
    padding: 3px 15px;
    background-color: rgba(23, 32, 215, 0.1);
    border-radius: 15px;
    transition: all 0.3s ease;
  }

  .blog-section .news-block .category a:hover {
    background-color: #1720d7;
    color: #ffffff;
  }

  /* Title */
  .blog-section .news-block h3 {
    position: relative;
    font-size: 20px;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 15px;
  }

  .blog-section .news-block h3 a {
    position: relative;
    color: #333333;
    transition: all 0.3s ease;
  }

  .blog-section .news-block h3 a:hover {
    color: #1720d7;
  }

  /* Post Meta */
  .blog-section .news-block .post-meta {
    position: relative;
    margin-bottom: 15px;
  }

  .blog-section .news-block .post-meta ul {
    position: relative;
    display: flex;
    align-items: center;
    flex-wrap: wrap;
  }

  .blog-section .news-block .post-meta ul li {
    position: relative;
    font-size: 14px;
    color: #777777;
    margin-right: 20px;
    display: flex;
    align-items: center;
  }

  .blog-section .news-block .post-meta ul li:last-child {
    margin-right: 0;
  }

  .blog-section .news-block .post-meta ul li .icon {
    font-size: 14px;
    color: #1720d7;
    margin-right: 5px;
  }

  /* Text */
  .blog-section .news-block .text {
    position: relative;
    font-size: 15px;
    line-height: 1.8;
    color: #666666;
    margin-bottom: 20px;
    flex-grow: 1;
  }

  /* Read More */
  .blog-section .news-block .read-more {
    position: relative;
    display: inline-flex;
    align-items: center;
    font-size: 14px;
    font-weight: 600;
    color: #1720d7;
    text-transform: uppercase;
    transition: all 0.3s ease;
    margin-top: auto;
  }

  .blog-section .news-block .read-more .icon {
    margin-left: 5px;
    font-size: 14px;
    transition: transform 0.3s ease;
  }

  .blog-section .news-block .read-more:hover {
    color: #0b56b9;
  }

  .blog-section .news-block .read-more:hover .icon {
    transform: translateX(5px);
  }

  /* Button Box */
  .blog-section .btn-box {
    position: relative;
    margin-top: 40px;
  }

  /* Responsive */
  @media only screen and (max-width: 991px) {
    .blog-section {
      padding: 60px 0;
    }

    .blog-section .news-block .image {
      height: 220px;
    }

    .blog-section .news-block .lower-content {
      padding: 25px;
    }
  }

  @media only screen and (max-width: 767px) {
    .blog-section {
      padding: 40px 0;
    }

    .blog-section .news-block {
      margin-bottom: 30px;
    }

    .blog-section .news-block h3 {
      font-size: 18px;
    }

    .blog-section .news-block .lower-content {
      padding: 20px;
    }
  }