---
import { FaAnchor, FaShip, FaClock ,FaHandHoldingWater , FaPrescriptionBottle ,FaIndustry  } from 'react-icons/fa';
import { GiPulleyHook,GiWaterTank , GiScubaTanks  } from "react-icons/gi";
import { getTranslations } from '../../i18n/translations.js';

const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/fr') ? 'fr' : 'en';
const t = getTranslations(lang);
// Services avec des icônes sous forme de clés
export const services = [
  {
    image: "/images/gallery/robex-logo.png",
    icon: 'GiScubaTanks ',  // Stocke seulement la clé du composant
    title: "ROBEX",
    text: "des-robex" ,
    link: "our-brands/robex",
  },
  {
    image: "/images/gallery/cranex-logo.png",
    icon: 'GiPulleyHook ', // Icône différente FaAnchor
    title: "CRANEX",
    text: "des-cranex" ,
    link: "our-brands/cranex",
  },
  {
    image: "/images/gallery/tanko-logo.png",
    icon: 'GiWaterTank', // Icône différente
    title: "TANKO",
    text: "des-tanko" ,
    link: "our-brands/tanko",
  },
  {
    image: "/images/gallery/mws-logo.jpg",
    icon: 'FaHandHoldingWater', // Pas d'icône pour 
    title: "MWS",
    text: "des-mws" ,
    link: "our-brands/mws",
  },
];

export const safeServices = services || [];
---

<!--Section Services-->
<section
  class="services-section"
  style="background-image:url(/images/background/1.jpg); position: relative; z-index: 20; margin-top: -100px;"
>
  <div  class="auto-container">
    <div class="inner-container">
      <div  id="our-brands"  class="row clearfix">
        {safeServices.map((service) => (
          <div class="services-block col-md-3 col-sm-6 col-xs-12">
            <div class="inner-box">
              <div class="image">
                <img src={service.image} alt={service.title} />
              </div>
              <div  class="lower-content">
                <div class="icon-box">
                  {/* Rend le composant d'icône en fonction de la clé */}
                  {service.icon && (
                    <span class="icon">
                      {service.icon === 'GiPulleyHook ' && <GiPulleyHook color="#007bff" />}
                      {service.icon === 'GiScubaTanks ' && <GiScubaTanks  color="#007bff"/>}
                      {service.icon === 'FaHandHoldingWater' && <FaHandHoldingWater color="#007bff" />}
                      {service.icon === 'FaShip' && <FaShip color="#007bff" />}
                      {service.icon === 'FaAnchor' && <FaAnchor color="#007bff"/>}
                      {service.icon === 'GiWaterTank' && <GiWaterTank color="#007bff"/>}
                      
                    </span>
                  )}
                </div>
                <h3>{service.title}</h3>
              </div>
              
              <!-- Overlay unique -->
              <div class="overlay-box">
                <div class="overlay-inner">
                  <div class="overlay-icon">
                    {/* Ajoute une icône dans l'overlay si disponible */}
                    {service.icon && (
                      <span class="icon">
                        {service.icon === 'GiPulleyHook ' && <GiPulleyHook  />}
                        {service.icon === 'GiScubaTanks ' && <GiScubaTanks  />}
                        {service.icon === 'FaHandHoldingWater' && <FaHandHoldingWater />}
                        {service.icon === 'GiWaterTank' && <GiWaterTank />}
                        {service.icon === 'FaShip' && <FaShip />}
                        {service.icon === 'FaAnchor' && <FaAnchor />}
                     
                      
                      </span>
                    )}
                  </div>
                  <h4><a href={service.link}>{service.title}</a></h4>
                  <p class="text">
  {
    service.text === 'des-robex' ? t.brands.robex.description :
    service.text === 'des-cranex' ? t.brands.cranex.description :
    service.text === 'des-tanko' ? t.brands.tanko.description :
    service.text === 'des-mws' ? t.brands.mws.description :
    service.text
  }
</p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  /* Style global pour la section Services */

/* Bloques de services */
.services-block {
  margin-bottom: 30px;
  position: relative;
  overflow: hidden; /* Cache tout le contenu qui dépasse */
  border-radius: 10px; /* Coins arrondis */
  transition: all 0.3s ease;
}

.services-block:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

/* Conteneur principal de l'élément de service */
.inner-box {
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
}

/* Image du service */
.services-block:hover .image img {
  transform: scale(1.1); /* Zoom sur l'image au survol */
}

/* Contenu bas visible avant le hover */
.lower-content h3 {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 15px;
}

.lower-content p {
  font-size: 14px;
  color: #777;
  margin-bottom: 15px;
}

/* Icône */
.icon-box {
  font-size: 40px;
  color: #007bff;
  margin-bottom: 15px;
}

/* Effet overlay (texte et lien au survol) */
.overlay-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7); /* Fond sombre */
  opacity: 0;
  visibility: hidden;
  color: white;
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.overlay-box .text {
  font-size: 16px;
  margin-bottom: 20px;
  line-height: 1.5;
}

.overlay-box .know-more {
  font-size: 16px;
  color: #fff;
  background-color: transparent;
  border: 2px solid #fff;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-weight: 500;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.overlay-box .know-more:hover {
  background-color: #fff;
  color: #007bff;
}

.services-block:hover .overlay-box {
  opacity: 1;
  visibility: visible;
}

</style>
<!--Fin Section Services-->
