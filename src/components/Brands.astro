---
// ServicesSection.astro (Version française améliorée)
export const services = [
  {
    image: "/images/resource/service-1.jpg",
    icon: "flaticon-boat",
    title: "ROBEX ",
    text: "Vannes et Équipements Hydromécaniques L'étanchéité au service de l'eau et de l'industrie.Conception et fabrication de vannes industrielles, vannes murales, batardeaux, pour barrages, réseaux urbains et industrie.",
    link: "/market-single",
  },
  {
    image: "/images/resource/service-3.jpg",
    icon: "flaticon-education",
    title: "CRANEX",
    text: "Solutions de Levage Intelligentes Élevez votre industrie. Grues, palans et systèmes de manutention pour l’industrie lourde, la logistique et l’énergie.",
    link: "/market-single",
  },
  {
    image: "/images/resource/service-2.jpg",
    icon: "flaticon-time",
    title: "TANKO",
    text: "Réservoirs et Appareils à Pression de Précision Conçus pour contenir, construits pour durer. Réservoirs sous pression, cuves de process et systèmes de stockage pour les milieux exige-ants.",
    link: "/market-single",
  },
  {
    image: "/images/resource/service-3.jpg",
    icon: "flaticon-engineer",
    title: "MWS",
    text: "Stations Mobiles de Traitement d’Eau De l’eau, là où vous en avez besoin. Stations mobiles et modulaires pour eau potable, dessalement, assainissement, humanitaire ou rural.",
    link: "/market-single",
  },
];

// Vérification que services est bien défini
export const safeServices = services || [];
---

<!--Section Services-->
<section
  class="services-section"
  style="background-image:url(/images/background/1.jpg); position: relative; z-index: 20; margin-top: -100px;"
>
  <div class="auto-container">
    <div class="inner-container">
      <div class="row clearfix">
        {
          safeServices.map((service) => (
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
              <div class="inner-box">
                <div class="image">
                  <img src={service.image} alt={service.title} />
                </div>
                <div class="lower-content">
                  <div class="icon-box">
                    <span class={`icon ${service.icon}`} />
                  </div>
                  <h3>{service.title}</h3>
                </div>
                <div class="overlay-box">
                  <div class="overlay-inner">
                    <div class="text">{service.text}</div>
                   
                    <div class="overlay-lower-inner">
                      <div class={`overlay-icon ${service.icon}`} />
                      <h4>
                       {service.title}
                      </h4>
                    </div>
                    <div class="overlay-box">
                  <div class="overlay-inner">
                    <div class="text">{service.text}</div>
                    
                    <div class="overlay-lower-inner">
                      <div class={`overlay-icon ${service.icon}`} />
                      <h4>
                        <a href={service.link}>{service.title}</a>
                      </h4>
                    </div>
                  </div>
                </div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  /* Style global pour la section Services */


/* Bloques de services */
.services-block {
  margin-bottom: 30px;
  position: relative;
  overflow: hidden; /* Cache tout le contenu qui dépasse */
  border-radius: 10px; /* Coins arrondis */
  transition: all 0.3s ease;
}

.services-block:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
}

/* Conteneur principal de l'élément de service */
.inner-box {
  background-color: #fff;
  border-radius: 10px;
  overflow: hidden;
  text-align: center;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
  position: relative;
}

/* Image du service */


.services-block:hover .image img {
  transform: scale(1.1); /* Zoom sur l'image au survol */
}

/* Contenu bas visible avant le hover */


.lower-content h3 {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 15px;
}

.lower-content p {
  font-size: 14px;
  color: #777;
  margin-bottom: 15px;
}

/* Icône */
.icon-box {
  font-size: 40px;
  color: #007bff;
  margin-bottom: 15px;
}

/* Effet overlay (texte et lien au survol) */
.overlay-box {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7); /* Fond sombre */
  opacity: 0;
  visibility: hidden;
  color: white;
  padding: 20px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}



.overlay-box .text {
  font-size: 16px;
  margin-bottom: 20px;
  line-height: 1.5;
}

.overlay-box .know-more {
  font-size: 16px;
  color: #fff;
  background-color: transparent;
  border: 2px solid #fff;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-weight: 500;
  transition: background-color 0.3s ease, color 0.3s ease;
}

.overlay-box .know-more:hover {
  background-color: #fff;
  color: #007bff;
}

.services-block:hover .overlay-box {
  opacity: 1;
  visibility: visible;
}

</style>
<!--Fin Section Services-->
