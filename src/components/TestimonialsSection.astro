---

<!--Section Témoignages-->
<section class="testimonial-section">
  <div class="auto-container">
    <div class="sec-title centered">
      <h2>Témoignages</h2>
      <div class="separator"></div>
    </div>
    <div class="testimonial-two-item owl-carousel owl-theme">
      
      {testimonials.map((testimonial) => (
        <div class={`testimonial-block ${testimonial.style}`}>
          <div class="inner-box">
            <div class="author-img">
              <img src={testimonial.image} alt={`Témoignage de ${testimonial.name}`} />
            </div>
            <div class="quote-icon">
              <span class="icon flaticon-quotation"></span>
            </div>
            <h3>{testimonial.name}</h3>
            <div class="location">{testimonial.location}</div>
            <div class="text">
              {testimonial.testimonial}
            </div>
            <a href="#" class="read">Lire la suite <span class="icon flaticon-right-arrow-1"></span></a>
          </div>
        </div>
      ))}
      
    </div>
  </div>
</section>
<!--Fin Section Témoignages-->